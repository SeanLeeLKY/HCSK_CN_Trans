  <!-- EN: point -->
  <MeleeWeapon_WraithBlade.tools.point.label>尖</MeleeWeapon_WraithBlade.tools.point.label>
  <!-- EN: edge -->
  <MeleeWeapon_WraithBlade.tools.edge.label>刃</MeleeWeapon_WraithBlade.tools.edge.label>

